<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:id="@+id/journal_item_icon"
            android:background="#ff000000"></RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:id="@+id/journal_item_date"
            android:layout_alignTop="@+id/journal_item_icon"
            android:layout_toRightOf="@+id/journal_item_icon"
            android:layout_toEndOf="@+id/journal_item_icon"
            android:textColor="@color/textColor1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:30"
            android:id="@+id/journal_item_time"
            android:layout_alignTop="@+id/journal_item_date"
            android:layout_toRightOf="@+id/journal_item_date"
            android:layout_toEndOf="@+id/journal_item_date"
            android:layout_marginLeft="6dp"
            android:textColor="@color/textColor1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am feeling much better today"
            android:id="@+id/journal_item_comment"
            android:textStyle="bold"
            android:textColor="@color/textColor1"
            android:layout_below="@+id/journal_item_date"
            android:layout_alignLeft="@+id/journal_item_date"
            android:layout_alignStart="@+id/journal_item_date" />
    </RelativeLayout>
</LinearLayout>