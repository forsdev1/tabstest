<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/presc_listitem_layout_id">

    <FrameLayout
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/frameLayout4">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/presc_icon_id"
            android:layout_below="@+id/presc_time_id"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/frameLayout4"
        android:layout_toEndOf="@+id/frameLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Msg time"
            android:id="@+id/presc_time_id"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/presc_icon_id"
            android:layout_toEndOf="@+id/presc_icon_id"
            android:textStyle="bold"
            android:layout_gravity="left|top"
            android:textColor="@color/textColor1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Msg description"
            android:id="@+id/presc_desc_id"
            android:layout_below="@+id/presc_msg_id"
            android:layout_toRightOf="@+id/presc_icon_id"
            android:layout_toEndOf="@+id/presc_icon_id"
            android:layout_gravity="left|center_vertical"
            android:textColor="@color/textColor1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:id="@+id/presc_msg_id"
            android:layout_alignTop="@+id/presc_icon_id"
            android:layout_toRightOf="@+id/presc_icon_id"
            android:layout_toEndOf="@+id/presc_icon_id"
            android:layout_gravity="left|bottom"
            android:textStyle="bold|italic"
            android:textColor="@color/textColor1" />
    </FrameLayout>
</RelativeLayout>