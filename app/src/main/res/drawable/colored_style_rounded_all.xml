<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#FFFFFF" />
            <corners
            android:radius="75dp" />
            <padding
                android:left="10dp"
                android:top="2dp"
                android:right="10dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#ff8b8a8f" />
            <corners
                android:radius="95dp" />
            <padding
                android:left="10dp"
                android:top="2dp"
                android:right="10dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>